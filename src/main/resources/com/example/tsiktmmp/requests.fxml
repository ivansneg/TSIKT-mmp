<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tsiktmmp.RequestController">
    <children>
        <MenuBar layoutY="2.0" prefHeight="24.0" prefWidth="535.0">
            <menus>
                <Menu mnemonicParsing="false" text="Library" />
                <Menu mnemonicParsing="false" text="My bookshelff" />
                <Menu mnemonicParsing="false" text="Add book">
                    <items>
                        <MenuItem fx:id="addBook" mnemonicParsing="false" onAction="#loadScene1" text="Add book" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Requests" >
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#loadScene2" text="Open requests" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Settings" />
            </menus>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </MenuBar>

        <!-- Add the GridPane here -->
        <GridPane fx:id="gridPane" hgap="10.0" layoutY="30.0" vgap="10.0">
            <!-- GridPane contents will be populated by the Java code -->
        </GridPane>
    </children>
    <opaqueInsets>
        <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
    </opaqueInsets>
    <cursor>
        <Cursor fx:constant="DEFAULT" />
    </cursor>
</AnchorPane>

